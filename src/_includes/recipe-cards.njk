<div class="auto-grid page-wrapper border-cheat">
  {% for recipe in collections.recipes -%}
    <a href="{{recipe.url}}" class="index-card" data-recipe-type="{{ recipe.data.type }}">
      <article class="index-card-desc">
        <h2>{{ recipe.data.title }}</h2>
        <p class="stars">{% for i in range(0, recipe.data.rating) %}★{% endfor %}</p>
        <p>🔪 Prep time: {{ recipe.data.prepTime }}</p>
        <p>⏱️ Cooking time: {{ recipe.data.cookTime }}</p>
        {% for ingredient in recipe.data.ingredients -%}
          <p>• {{ingredient}}</p>
        {% endfor%}
      </article>
      <img class="index-card-image" src="{{recipe.data.image}}" alt="{{recipe.data.title}}">
    </a>
  {%- endfor %}
</div>